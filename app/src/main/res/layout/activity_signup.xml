<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_image_one_signup"
    tools:context=".signup">


    <TextView
        android:id="@+id/booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:text="Craete Account..."
        android:textSize="40dp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/booking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:hint="Enter Username"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:id="@+id/et_password"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:layout_below="@+id/et_username"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:id="@+id/et_cpassword"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cpassword"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:text="Sign up"
        android:id="@+id/signii"
        android:textColor="#191919"
        android:textSize="25sp"
        android:padding="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_register"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_cpassword"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/forword"
        android:text="Register" />

    <TextView
        android:id="@+id/tex_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="52dp"
        android:text="Back to login"
        android:textColor="#FF6D00"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>